CREATE TABLE EMPLEADO (ID_EMPLEADO INTEGER, NOMBRE_EMPLEADO VARCHAR2(30), SUELDO_BASE FLOAT, FECHA_CONTRATACION DATE, CONSTRAINT PK_ID_EMPLEADO PRIMARY KEY (ID_EMPLEADO));

--ACTIVAMOS LA CONSOLA DE ORACLE, SE INVOCA SOLAMENTE UNA VEZ POR SESION DE SCL, MODO DEVELOPER

SET SERVEROUTPUT ON;

DECLARE
MY_FECHA DATE;
BEGIN
MY_FECHA:=TO_DATE('02-MAY-2016','DD-MON-YYYY');
INSERT INTO EMPLEADO VALUES(2,'JUAN',250,MY_FECHA);
dbms_output.put_line('SE GUARDO TU REGISTRO CON EXITO AMIGUITO!!');
EXCEPTION WHEN OTHERS THEN dbms_output.put_line('LO SIENTO PERO METISTE LA PATA TONTO(A)');
END;
/

SELECT * FROM EMPLEADO;

/*
VEREMOS UN NUEVO OBJETO DE BASE DE DATOS QUE SE LLAMA PROCEDIMIENTO ALMACENADO 
*/

BEGIN 
SUMA(5,4);
END;
/



CREATE OR REPLACE PROCEDURE SUMA (VALOR1 IN NUMBER, VALOR2 IN NUMBER) 
AS 
RESULTADO NUMBER;
BEGIN
  RESULTADO:=VALOR1+VALOR2;
  dbms_output.put_line('LA SUMA ES: '||RESULTADO);
END SUMA;

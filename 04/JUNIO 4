--vamos a crear primero la tabla pelicula
CREATE TABLE PELICULA(ID_PELICULA INTEGER, TITULO VARCHAR2(80), SINOPSIS VARCHAR2(200), CONSTRAINT PK_ID_PELICULA PRIMARY KEY(ID_PELICULA));

--GENERAMOS SECUENCIA PARA DESPUES ASOCIARLA A LA TABLA PELICULA
CREATE SEQUENCE SEC_PELICULA
START WITH 1 INCREMENT BY 1 NOMAXVALUE;

--GENERAR UN PROCEDIMIENTO ALMACENADO PARA GUARDAR UNA PELICULA
CREATE OR REPLACE PROCEDURE GUARDAR_PELICULA(MY_ID_PELICULA OUT INTEGER, MY_TITULO IN VARCHAR2, MY_SINOPSIS IN VARCHAR2) AS 
BEGIN
--VIENE LA LOGICA Y AQUI VAMOS A RELACIONAR EL ID_PELICULA CON LA SEC_PELICULA
SELECT SEC_PELICULA.NEXTVAL INTO MY_ID_PELICULA FROM DUAL;
INSERT INTO PELICULA VALUES(MY_ID_PELICULA, MY_TITULO, MY_SINOPSIS);
END;
/
SELECT * FROM PELICULA;




